<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.kuberkings.obaki.screens.SignUp" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invitation_back"
        tools:context=".screens.SignUp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"

                android:layout_gravity="center"
                android:layout_height="300dp"
                android:src="@drawable/onboarding_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="22dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:layout_marginTop="40dp"
                    android:textSize="20sp"
                    android:text="We reserved your profile and username. We'll email and text you as soon as your account is ready."
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />







                <Button
                    android:layout_width="match_parent"
android:layout_marginBottom="32dp"
                    android:layout_marginTop="40dp"
                    android:padding="16dp"
                    android:id="@+id/btn_onboarding_next"
                    android:text="Continue"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:background="@drawable/black_round"
                    android:layout_height="wrap_content"/>






            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</layout>