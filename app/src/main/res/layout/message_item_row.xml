<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMessage"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight=".4"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/messageImage"
        android:padding="8dp"
        android:src="@drawable/chef" />
    <ImageView
        android:layout_width="20dp"
        android:src="@drawable/ic_baseline_calendar_today_24"
        android:layout_gravity="center"
        android:layout_height="20dp"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:orientation="vertical"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Title"
                android:layout_alignParentLeft="true"
                android:id="@+id/messageTitle"


                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="4dp"
                android:gravity="center"
                 android:id="@+id/status"
android:layout_alignParentRight="true"
                android:textSize="14sp" />
        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/message"
android:textColor="#2C2F32"
            android:text="Message  " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/date"

            android:text="Mar 14-17, 2021  " />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"


            android:text="Studio apartment with city view  " />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:id="@+id/ll_action_message"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Accept Request"
                android:padding="8dp"
android:layout_margin="2dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/orange_round"
                android:layout_weight="1"
                android:id="@+id/btn_accept_request"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Decline"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/btn_decline"
                android:background="@drawable/orange_round_border"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Write Review"
            android:id="@+id/btn_write_review"
            android:textSize="12sp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/black_round"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight=".4"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/messageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="8:00"
           android:layout_gravity="top"
            android:textSize="10sp" />


    </LinearLayout>

</LinearLayout>
