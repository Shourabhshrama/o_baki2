<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.kuberkings.obaki.screens.ChefPorifleActivity" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.RestaurentDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/white"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="100dp"
                    android:background="@drawable/chef"

                    android:layout_height="300dp">


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="32dp"
                        android:padding="2dp"
                        app:tint="@color/white"
                        android:layout_marginLeft="20dp"
android:id="@+id/btnBtn"
                        android:src="@drawable/left_circle"
                        android:layout_height="32dp"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:padding="2dp"
                        android:layout_marginRight="20dp"
                        app:tint="@color/white"
                        android:id="@+id/rest_detail_save"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_iconly_bold_bookmark"
                        android:layout_height="32dp"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_margin="32dp"
                    app:cardCornerRadius="32dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="bottom"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"

                                android:drawablePadding="4dp"
                                android:drawableLeft="@drawable/ic_bold_star"
                                android:text="4.5"

                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"


                                android:layout_gravity="center"
                                android:text="351 Ratings"


                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"

                                android:drawablePadding="4dp"
                                android:drawableTint="@color/colorPrimary"
                                android:drawableLeft="@drawable/ic_iconly_bold_bookmark"
                                android:text="137k"

                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"

                                android:layout_gravity="center"

                                android:text="Bookmark"


                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:drawablePadding="4dp"
                                android:drawableLeft="@drawable/ic_gallary_image"
                                android:text="346"


                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"


                                android:text="Photo"


                                android:textColor="@color/black"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:textSize="14sp"

                        android:layout_weight="1"
                        android:text="Cooking hosted by pimlada"

                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/contact_host_back"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="Contact Chef"


                        android:textColor="#FE9B02"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:textSize="12sp"

                    android:layout_weight="1"
                    android:text="I'm a Sous Chef at the Oleander. Looking to build skills and relationships in my community."


                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:drawablePadding="8dp"

                android:drawableLeft="@drawable/ic_time_circle"
                android:text="Flexible"


                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:drawablePadding="8dp"

                android:drawableLeft="@drawable/ic_iconly_light_chat"
                android:text="Hosted in English, Chinese (Simplified)"


                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:drawablePadding="8dp"


                    android:text="Sleep Over"


                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:background="@drawable/contact_host_back"
                    android:padding="8dp"
                    android:text="Request addtion service"
                    android:gravity="center"
                    android:textColor="#FE9B02"

                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"

                android:text="Chef Specialities"


                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_gravity="center"

                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef_special_two"
                    android:layout_margin="8dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef_speical_three" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef_special_four" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef_special_one" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/color_grey"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:textSize="16sp"


                        android:text="Availability"

                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="4dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="12sp"


                        android:text="Add your travel dates for exact pricing"


                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_weight=".7"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/right_circle" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:id="@+id/btn_sign_in"
                android:text="Book"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/black_round"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="bottom"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:padding="8dp"


                    android:layout_gravity="center"
                    android:text="4.5"
                    android:textStyle="bold"

                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />


                <RatingBar
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:id="@+id/ratingBar"
                    android:max="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:layout_gravity="center"

                    android:text="351 Ratings"

                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="1"

                    android:text="150 Reviews"


                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_marginTop="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:textSize="14sp"
                            android:id="@+id/reviewUsername"

                            android:layout_alignParentLeft="true"
                            android:text="Bebie Gorgina"

                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_below="@+id/reviewUsername"
                            android:textSize="12sp"

                            android:layout_alignParentLeft="true"
                            android:text="10 June, 2021"


                            android:layout_height="wrap_content" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:layout_alignParentRight="true"
                            android:max="5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:layout_gravity="center"

                            android:text="10 June, 2021"

                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_margin="4dp"


                        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam..."


                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_margin="4dp"


                        android:textColor="#44CF6E"
                        android:text="Show More"


                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_weight=".7"
                    android:layout_marginTop="16dp"

                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/chef"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight=".3"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="4dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"

                            android:textSize="14sp"
                            android:id="@+id/reviewUsername2"

                            android:layout_alignParentLeft="true"
                            android:text="Bebie Gorgina"

                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_below="@+id/reviewUsername2"
                            android:textSize="12sp"

                            android:layout_alignParentLeft="true"
                            android:text="10 June, 2021"


                            android:layout_height="wrap_content" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:layout_alignParentRight="true"
                            android:max="5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:layout_gravity="center"

                            android:text="10 June, 2021"

                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_margin="4dp"


                        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam..."


                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="8dp"
                        android:layout_margin="4dp"


                        android:textColor="#44CF6E"
                        android:text="Show More"


                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="4dp"
                        android:layout_height="wrap_content">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dish"
                            android:layout_weight="1"
                            app:shapeAppearanceOverlay="@style/roundedImageView"
                            android:layout_margin="4dp"
                            android:layout_height="50dp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:text="More Local chef in your area"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:text="View All"
                    android:textColor="#FE9B02"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recyclerviewChefProfile"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</layout>