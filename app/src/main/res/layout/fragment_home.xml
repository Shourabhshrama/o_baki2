<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


            />
        <TextView
            android:layout_width="match_parent"
            android:textSize="22sp"
        android:padding="22dp"
            android:background="#FE9B02"
android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="start"
            android:text="Experience New Local Food's Everyday"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:background="@drawable/round_gray_light"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ccp"
              android:src="@drawable/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"


              />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/background_chat_color"
                android:hint="Search to eat or pick a chef"
                android:inputType="phone"
                android:padding="4dp"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/filter"
                android:src="@drawable/filter"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".8"


                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview_cat"
            android:layout_margin="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


<TextView
    android:layout_width="match_parent"
   android:layout_marginLeft="8dp"
    android:textStyle="bold"
    android:text="Local Chef Highlight"
    android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="Popular"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="See All"
                android:textColor="#FE9B02"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview2"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="Popular Sit-in Experience"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="View All"
                android:textColor="#FE9B02"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview3"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="Popular Chef in Your Radius"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="View All"
                android:textColor="#FE9B02"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview_chef"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_margin="2dp"
           android:padding="2dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_marginLeft="8dp"
               android:textStyle="bold"
               android:text="Order Again"
               android:layout_alignParentLeft="true"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_marginLeft="8dp"
               android:textStyle="bold"
               android:textColor="#FE9B02"
               android:text="See All"
               android:layout_alignParentRight="true"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview_order_again"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>