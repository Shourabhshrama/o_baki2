<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
android:orientation="vertical"
    android:gravity="center_vertical">


<FrameLayout
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/dish"
        android:padding="10dp"
        android:id="@+id/imaveViewRest"
        android:scaleType="centerCrop"
   android:foreground="@drawable/image_round_shape"
        android:layout_gravity="center|top"
        android:layout_height="120dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:text="55m"
            android:padding="4dp"
            android:background="@drawable/round_transaprent"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:background="@drawable/round_transaprent"
android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:text="4.5"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</FrameLayout>


    <TextView

        android:layout_width="match_parent"
        android:text="Leslie A."

      android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#1D1F21"
        android:gravity="start|bottom"
        android:layout_height="match_parent"
        />
    <TextView

        android:layout_width="match_parent"
        android:text="Real Italian Recipes for the start of autumn"
        android:textColor="#1D1F21"
android:textStyle="bold"
        android:lines="2"
        android:textSize="18sp"

        android:layout_height="match_parent"
        />

</LinearLayout>